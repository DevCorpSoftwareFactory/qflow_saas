{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "ES2022"
        ],
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": ".",
        "paths": {
            "@qflow/shared": [
                "packages/shared/src"
            ],
            "@qflow/shared/*": [
                "packages/shared/src/*"
            ],
            "@qflow/database": [
                "packages/database/src"
            ],
            "@qflow/database/*": [
                "packages/database/src/*"
            ]
        },
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "incremental": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        ".turbo",
        "apps/pos"
    ]
}