# =============================================================================
# QFlow Pro - Production Environment Variables
# =============================================================================
# Copy this file to .env and configure for your environment
# DO NOT commit .env files with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
DB_HOST=postgres
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_NAME=qflow_pro

# Full connection string (alternative to individual vars)
# DATABASE_URL=postgresql://${DB_USERNAME}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
# REDIS_PASSWORD=  # Uncomment and set if Redis requires auth

# -----------------------------------------------------------------------------
# JWT / Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=CHANGE_ME_USE_STRONG_SECRET_MIN_32_CHARS
JWT_EXPIRES_IN=1d

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
NODE_ENV=production
API_PORT=3000

# -----------------------------------------------------------------------------
# Frontend URLs (Next.js Apps)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_API_URL=http://api:3000
NEXT_PUBLIC_APP_NAME=QFlow Pro

# Admin App
ADMIN_PORT=3001

# Portal App
PORTAL_PORT=3002

# -----------------------------------------------------------------------------
# Monitoring (Grafana)
# -----------------------------------------------------------------------------
GF_SECURITY_ADMIN_PASSWORD=CHANGE_ME_GRAFANA_PASSWORD
GF_SECURITY_ADMIN_USER=admin

# -----------------------------------------------------------------------------
# PostgreSQL (Docker Service)
# -----------------------------------------------------------------------------
POSTGRES_USER=${DB_USERNAME}
POSTGRES_PASSWORD=${DB_PASSWORD}
POSTGRES_DB=${DB_NAME}

# -----------------------------------------------------------------------------
# PgAdmin (Development only)
# -----------------------------------------------------------------------------
PGADMIN_DEFAULT_EMAIL=admin@qflow.local
PGADMIN_DEFAULT_PASSWORD=CHANGE_ME_PGADMIN_PASSWORD
