# =============================================================================
# QFlow Pro - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# Base de Datos (Docker local)
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_NAME=qflow_pro

# URL de conexión completa
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/qflow_pro

# Supabase (Producción)
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_ANON_KEY=tu-anon-key
SUPABASE_SERVICE_ROLE_KEY=tu-service-role-key

# Aplicación
NODE_ENV=development
PORT=3000

# JWT
JWT_SECRET=cambiar-por-secreto-seguro-de-32-caracteres-minimo
JWT_EXPIRES_IN=7d

# pgAdmin (desarrollo)
PGADMIN_EMAIL=admin@qflow.local
PGADMIN_PASSWORD=admin
